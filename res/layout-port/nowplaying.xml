
<LinearLayout android:layout_above="@+id/ImageView01"
	android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:id="@+id/nowPlayingMainLayout" android:background="@color/light_gray">
	<TextView android:id="@+id/now_playing_nom_artiste"
		android:text="NomArtiste" android:layout_width="fill_parent"
		android:background="@color/black" android:layout_marginBottom="1px"
		android:layout_gravity="bottom" android:layout_height="wrap_content"
		android:gravity="left|center_vertical" android:height="30dip"
		android:paddingLeft="15dip" android:marqueeRepeatLimit="marquee_forever"></TextView>
	<TextView android:id="@+id/now_playing_nom_album"
		android:text="NomAlbum" android:layout_width="fill_parent"
		android:background="@color/black" android:layout_marginBottom="1px"
		android:layout_gravity="bottom" android:layout_height="wrap_content"
		android:gravity="left|center_vertical" android:height="30dip"
		android:paddingLeft="15dip" android:marqueeRepeatLimit="marquee_forever"></TextView>
	<TextView android:layout_width="fill_parent" android:id="@+id/now_playing_title"
		android:background="@color/black" android:layout_marginBottom="1px"
		android:layout_gravity="bottom" android:layout_height="wrap_content"
		android:text="Nom pisteééé ddf gdfg df gdfgdf gdf gd fg"
		android:gravity="left|center_vertical" android:height="30dip"
		android:paddingLeft="15dip" android:marqueeRepeatLimit="marquee_forever"></TextView>


	<LinearLayout android:id="@+id/LinearLayout06"
		android:layout_height="wrap_content" android:orientation="vertical"
		android:layout_width="fill_parent" android:background="@color/CouleurGrisSombre"
		android:layout_marginBottom="1px">
		<LinearLayout android:id="@+id/LinearLayout01"
			android:layout_gravity="right" android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="99"
				android:id="@+id/now_playing_volume"></TextView>
			<TextView android:id="@+id/TextView02" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text=" %"></TextView>
		</LinearLayout>
		<RelativeLayout android:id="@+id/RelativeLayout01"
			android:layout_gravity="center" android:background="@color/white"
			android:layout_marginBottom="15dip" android:layout_height="180dip" android:layout_width="180dip">
			<ImageView android:adjustViewBounds="true" android:id="@+id/AlbumArt"
				android:layout_gravity="center_horizontal" android:padding="5px"
				android:background="@color/black" android:layout_height="fill_parent"
				android:layout_width="fill_parent" android:layout_margin="3dip"></ImageView>
		</RelativeLayout>

		<SeekBar android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:id="@+id/CurrentPositionSlider"
			android:thumb="@drawable/slider" android:background="@color/CouleurGrisSombre"
			android:layout_marginBottom="6px" android:layout_marginLeft="10dip" android:progressDrawable="@drawable/progressbar"
			android:layout_marginRight="10dip">
		</SeekBar>
<!--			android:progressDrawable="@drawable/progressbar" -->
	</LinearLayout>

	<LinearLayout android:id="@+id/LinearLayout02"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:gravity="fill_horizontal" android:background="@color/CouleurGrisSombre"
		android:layout_marginBottom="1px">



		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_gravity="left"
			android:id="@+id/now_playing_song_position" android:text="01:21:10"
			android:layout_marginLeft="50dip"></TextView>

		<View android:id="@+id/View01" android:layout_height="fill_parent"
			android:layout_width="fill_parent" android:layout_weight="0.2"></View>

		<TextView android:id="@+id/now_playing_song_duration"
			android:text="03:05:12" android:layout_marginLeft="10px"
			android:layout_gravity="right" android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:layout_marginRight="50dip"></TextView>

	</LinearLayout>






	<LinearLayout android:id="@+id/LinearLayout03"
		android:layout_height="wrap_content" android:gravity="fill_horizontal"
		android:layout_width="fill_parent"
		android:layout_gravity="left" android:layout_marginBottom="1px">

		<ImageButton android:id="@+id/BoutonPrecedent"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:layout_gravity="left"
			android:src="@drawable/img_button_prev_nowplaying" android:layout_marginRight="1px" android:background="@color/black"></ImageButton>

		<ImageButton android:id="@+id/BoutonPlayPause"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:layout_gravity="left"
			android:src="@drawable/img_button_play_nowplaying" android:background="@color/black" android:layout_marginRight="1px"></ImageButton>

		<ImageButton android:id="@+id/BoutonStop"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:layout_gravity="left"
			android:src="@drawable/img_button_stop_nowplaying" android:background="@color/black" android:layout_marginRight="1px"></ImageButton>

		<ImageButton android:id="@+id/BoutonSuivant"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_gravity="left"
			android:src="@drawable/img_button_next_nowplaying" android:background="@color/black" android:layout_marginRight="1px"></ImageButton>

		<ImageButton android:id="@+id/BoutonPlaylist"
			android:layout_gravity="right" android:background="@color/black" android:layout_height="fill_parent" android:layout_width="fill_parent"></ImageButton>
	</LinearLayout>

</LinearLayout>
	
